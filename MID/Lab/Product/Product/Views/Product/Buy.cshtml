@model List<Product.Models.Entities.Product>
@{
    ViewBag.Title = "Buy";
}
<style>
    #p-block {
        display: inline-flex;
        color: black;
        margin: 10px;
        border: 3px solid black;
        height: 120px;
        width: 200px;
        @*overflow-y: scroll;*@
    }
</style>

<h2>Buy</h2>
@if (Model != null)
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div id="p-block">
            <div>
                Name: @Model[i].Name<br />
                Price: @Model[i].Price Tk.<br />
                Stock-In: @Model[i].Quantity<br />
                <a href="@Url.Action("AddToChart", "Product", new { @id = Model[i].Id, @Quantity = 1})" class="btn btn-primary" style="float:right; padding-top: 15px; margin: 5px">Add to chart(1x)</a>
            </div>
        </div>
        
    }
}

