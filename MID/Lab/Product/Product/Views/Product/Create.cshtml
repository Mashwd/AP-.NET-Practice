@model Product.Models.Entities.Product
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Product/Create" method="post">
    Name: <input type="text" class="form-control" value="@Model.Name" name="Name" />

    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    <br>Quantity: <input type="text" class="form-control" value="@Model.Quantity" name="Quantity" />
    @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })

    <br>Price: <input type="text" class="form-control" value="@Model.Quantity" name="Price" />
    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })

    <input type="submit" value="Add" class="btn btn-success">

</form>
